{
  "name": "tins-x11",
  "description": "Desktop Support",
  "config": {
    "environment.DISPLAY": ":0",
    "environment.PULSE_SERVER": "unix:/home/$USER/pulse-native",
    "raw.idmap": "both $UID $UID",
    "user.user-data": "resource:///com/github/marbetschar/tins/lxd/profile-x11.yml"
  },
  "devices": {
    "PASocket1": {
        "bind": "container",
        "connect": "unix:/run/user/$UID/pulse/native",
        "listen": "unix:/home/$USER/pulse-native",
        "type": "proxy"
    },
    "X0": {
      "bind": "container",
      "connect": "unix:@/tmp/.X11-unix/X1",
      "listen": "unix:@/tmp/.X11-unix/X0",
      "type": "proxy"
    },
    "graphics": {
      "type": "gpu"
    }
  }
}

